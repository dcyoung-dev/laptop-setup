brew bundle --file=- <<EOF
tap "homebrew/bundle"
tap "homebrew/cask"
tap "homebrew/cask-fonts"
tap "homebrew/core"
tap "homebrew/services"

brew "ffmpeg"
brew "jq"
brew "neovim"
brew "postgresql", restart_service: true
brew "redis", restart_service: true
brew "shellcheck"
brew "ssh-copy-id"
brew "zsh"
brew "zsh-autosuggestions"
brew "zsh-syntax-highlighting"

# COMMS
cask "microsoft-teams"
cask "microsoft-outlook"
cask "tuple"

# BROWSERS
cask "firefox"
cask "google-chrome"

# FONTS
cask "font-fira-code"
cask "font-fontawesome"

# EDITORS
cask "jetbrains-toolbox"
cask "visual-studio-code"

# PRODUCTIVITY
cask "raycast"
cask "meetingbar"
cask "notion"
cask "obsidian"
cask "warp"

# UTILS
cask "1password"
cask "adobe-acrobat-reader"
cask "caffeine"
cask "grammarly"
cask "krisp"
cask "loom"
cask "ngrok"
cask "rectangle"
cask "rocket"
cask "spotify"
cask "suspicious-package"
cask "the-unarchiver"
EOF

fancy_echo "Cleaning up old Homebrew formulae ..."
brew cleanup

fancy_echo "Adding foreman gem"
gem_install_or_update "foreman"

fancy_echo "Cloning thoughtbot dotfiles"
git clone https://github.com/thoughtbot/dotfiles.git ~/dotfiles

fancy_echo "Cloning personal dotfiles"
git clone https://github.com/dcyoung-dev/dotfiles-local.git ~/dotfiles-local
env RCRC=$HOME/dotfiles/rcrc rcup

if [ -r "$HOME/.rcrc" ]; then
  fancy_echo "Updating dotfiles ..."
  rcup
fi

